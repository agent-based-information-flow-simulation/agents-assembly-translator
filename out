import random as r
import spade
from numpy.random import normal


class test(spade.agent.Agent):
    def __init__(self, jid, password, location, connections):
        super().__init__(jid, password, verify_security=False)
        self.yes = 5
        self.enum1 = r.choices(["yes"], [100])[0]
        self.enum2 = r.choices(["yes", "maybe"], [30, 70])[0]
        self.no = []
    
    def setup(self):
        self.add_behaviour(self.setup_test())
    
    class setup_test(spade.behaviour.OneShotBehaviour):
        async def test(self):
            tmp = 20
            if self.agent.yes == tmp:
                ...
        
        async def run(self):
            await self.test()


