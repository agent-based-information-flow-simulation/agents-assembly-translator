import json
import random
import numpy
import spade


class BaseMessage:
    def __init__(self, _type, performative):
        self.type = _type
        self.performative = performative
        self.body = {}
    
    def get_spade_message(self):
        msg = spade.message.Message()
        msg.metadata["type"] = self.body["type"] = self.type
        msg.metadata["performative"] = self.body["performative"] = self.performative
        msg.body = json.dumps(self.body)
        return msg


class test(spade.agent.Agent):
    def __init__(self, jid, password, location, connections):
        super().__init__(jid, password, verify_security=False)
        self.location = location
        self.connections = connections
    
    def setup(self):
        ...
    
