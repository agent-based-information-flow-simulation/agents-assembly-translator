import random as r
import spade
from numpy.random import normal


class AverageUser(spade.agent.Agent):
    def __init__(self, jid, password, location, connections):
        super().__init__(jid, password, verify_security=False)
        self.minutes_spent_daily_on_youtube = 205.7
        self.fakenews_susceptibility = normal(15, 32)
        self.prefered_website = r.choices(["facebook", "twitter"], [100, 0])
        self.is_online = r.choices(["yes", "no"], [95, 5])
        self.friends = []
        self.spam = []
